
<div id="backlog-right">
  <div id="backlog-left">
    <div id="bl-left">
      <p><% image_tag(@chart.chart(600,200)) unless @chart.blank? %></p>
      <%= render(:partial => "shared/project_stats", :locals => {:project => @project}) %>
      <%= render(:partial => "sprints/product_backlog") %>
      <%#= render(:partial => "milestones/milestones") %>
    </div>
    <div id="bl-right">
      <div class="sprints_fieldset">
        <div class="sprints_header">
          <h3><%= l('sprints') %></h3>
        </div> 

        <%= link_to image_tag("/plugin_assets/redmine_sprints/images/add.png")+l('new_sprint'), {:action => :new, :project_id => @project.identifier },
          {:id => "new_sprint", :title => l('new_sprint'),
          :onclick => "Modalbox.show(this.href, {title: this.title, width: 700}); return false;"} %>
        <div id="sprints_fieldset_main">
          <% for sprint in @sprints %>
            <%= render(:partial => "sprints/sprint", :locals => {:sprint => sprint}) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

